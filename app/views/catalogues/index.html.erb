<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Add</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <% if product.has_an_image? %>
          <td><%= image_tag product.images.last.variant(resize: "50x50") %></td>
        <% end %>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= form_for :cart, url: cart_path, method: :put do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
            <%= form.submit "Add" %>
          <% end %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>